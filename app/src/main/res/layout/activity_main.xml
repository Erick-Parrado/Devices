<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvAndroidVersionLB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvVersionAndroidLB" />

        <TextView
            android:id="@+id/tvAndroidVersion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvVersionAndroid" />

        <TextView
            android:id="@+id/tvFlashlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvligth" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btLightOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btOff" />

            <Button
                android:id="@+id/btLightOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="On" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvBatteryLB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvLevelBaterry" />

        <TextView
            android:id="@+id/tvBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvLevelBaterry_2" />

        <ProgressBar
            android:id="@+id/pbBattery"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvStorge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvStorage" />

        <TextView
            android:id="@+id/etStorage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="@string/etNameFile" />

        <ImageButton
            android:id="@+id/ibStorage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_input_add"
            android:contentDescription="@string/ibSaveFile"/>

        <TextView
            android:id="@+id/tvConectionLB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvState" />

        <TextView
            android:id="@+id/tvConection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tvStateConexion" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>